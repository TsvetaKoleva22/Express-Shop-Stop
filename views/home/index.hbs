<h1 class="head-title">Welcome to ShopStop!</h1>

<form id="search-form" action="/search" method="POST">
    <input type="text" name="query" placeholder="Search...">
    <input type="submit" value="Search">
</form>

<div class="cards">
    {{#each productsArr}}
    <div class="product-card">
        <img class="product-img" src="{{image}}">
        <h2>{{name}}</h2>
        <p>{{description}}</p>
        
        <a class="btn btn-sm btn-success" href="/product/buy/{{_id}}">Buy</a>
        <a class="btn btn-sm btn-warning" href="/product/edit/{{_id}}">Edit</a>
        <a class="btn btn-sm btn-danger" href="/product/delete/{{_id}}">Delete</a>
        
        <a class="btn btn-sm btn-primary" href="/category/{{category.name}}">More {{category.name}}</a>
    </div>
    {{/each}}
</div>